worker_processes 1;

events {
  worker_connections 1024;
}

http {
  include mime.types;
  default_type application/octet-stream;
  sendfile on;
  keepalive_timeout 65;

  access_log /dev/stdout;
  error_log /dev/stderr;

  server {
    listen <%= ENV["PORT"] %>;
    root public;
    index index.html;

    location / {
      try_files $uri $uri/ =404;
    }
  }
}
